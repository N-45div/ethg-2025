# =============================================================================
# Synced Streams - Frontend Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Do not commit .env.local to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Contract Addresses (Sepolia Testnet)
# Find actual addresses in README.md or on Etherscan
NEXT_PUBLIC_TREASURY_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_PAYROLL_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_PYUSD_ADDRESS=0x0000000000000000000000000000000000000000

# USDC Payroll Contracts
NEXT_PUBLIC_TREASURY_ADDRESS_USDC=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_PAYROLL_ADDRESS_USDC=0x0000000000000000000000000000000000000000

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------
# Nexus and network settings
NEXT_PUBLIC_NEXUS_NETWORK=testnet
NEXT_PUBLIC_SEPOLIA_RPC=https://sepolia.infura.io/v3/your_infura_project_id
NEXT_PUBLIC_TARGET_CHAIN=sepolia
NEXT_PUBLIC_BASE_SEPOLIA_EXPLORER=https://sepolia.etherscan.io

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
# Payroll administration (keep secure)
PAYROLL_ADMIN_KEY=your_payroll_admin_private_key_here
NEXT_PUBLIC_GRANT_ROLE_TOKEN=your_grant_role_token_here
GRANT_ROLE_TOKEN=your_grant_role_token_here

# -----------------------------------------------------------------------------
# External Services
# -----------------------------------------------------------------------------
# Upstash Redis for caching and sessions
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# RPC URL for backend operations
RPC_URL=https://sepolia.infura.io/v3/your_infura_project_id

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Scheduling and data retrieval
SCHEDULES_LOOKBACK_BLOCKS=20000

# Development settings
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=true
