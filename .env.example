# =============================================================================
# Synced Streams - Smart Contracts Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Do not commit .env.local to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Blockchain Development Configuration
# -----------------------------------------------------------------------------
# Ethereum Sepolia RPC URL for smart contract development
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your_infura_project_id

# Private key for contract deployment (development only)
# IMPORTANT: Never use your main wallet private key for development
SEPOLIA_PRIVATE_KEY=your_private_key_here

# -----------------------------------------------------------------------------
# Contract Configuration
# Find actual addresses in README.md or on Etherscan
PYUSD_ADDRESS=0x0000000000000000000000000000000000000000
PYUSD_HOLDER=0x0000000000000000000000000000000000000000
PAYROLL_ADDRESS=0x0000000000000000000000000000000000000000
GRANTEE_ADDRESS=0x0000000000000000000000000000000000000000

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------
# Default network for deployments
HARDHAT_NETWORK=sepolia

# Gas configuration
GAS_PRICE=20000000000
GAS_LIMIT=8000000

# -----------------------------------------------------------------------------
# Development Tools Configuration
# -----------------------------------------------------------------------------
# Hardhat configuration
HARDHAT_VERBOSE=true
HARDHAT_SHOW_STACK_TRACES=true

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# -----------------------------------------------------------------------------
# Testing Configuration
# -----------------------------------------------------------------------------
# Test wallet configuration (for automated testing)
TEST_PRIVATE_KEY=your_test_private_key_here
TEST_MNEMONIC=test test test test test test test test test test test junk

# Coverage configuration
COVERAGE_THRESHOLD=80
COVERAGE_REPORT_HTML=true

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Encryption keys for sensitive data
ENCRYPTION_KEY=your_32_character_encryption_key_here

# API rate limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=900000
